{
    "version": "2.0.0",
    "command": "bash",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "export LSAN_OPTION=\"verbosity=1:log_threads=1\"; make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "make clean",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}